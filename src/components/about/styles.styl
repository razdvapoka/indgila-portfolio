@import '../../style/utils.styl'
@import '../../style/media.styl'

.about
  margin: 0 auto
  max-width: pxToRem(950)
  margin-bottom: pxToRem(40)
  a
    text-decoration: underline
  +mobile()
    margin-top: pxToRem(12)
    margin-bottom: 0
  &Description
    childrenSpacingY(pxToRem(40))
    +mobile()
      childrenSpacingY(pxToRem(20))
  &Contacts
    display: none
    +mobile()
      display: block
      margin-top: pxToRem(20)
  &Lists
    margin-top: pxToRem(90)
    display: flex
    childrenSpacingX(pxToRem(40))
    +mobile()
      margin-top: pxToRem(40)
      flex-direction: column
      childrenSpacingX(0)
      childrenSpacingY(pxToRem(20))
  &ListsCol
    flex: 1
    childrenSpacingY(pxToRem(50))
    +mobile()
      childrenSpacingY(pxToRem(20))
  &List
    childrenSpacingY(pxToRem(20))
    p:first-child
      margin-bottom: pxToRem(40)
      +mobile()
        margin-bottom: pxToRem(20)
    +mobile()
      childrenSpacingY(pxToRem(10))
