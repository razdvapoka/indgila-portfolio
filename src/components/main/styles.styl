@import '../../style/utils.styl'
@import '../../style/media.styl'

.mainBox
  flex: 1
  display: flex
  font-size: pxToRem(20)
  line-height: (22 / 20)
  overflow: hidden
  position: relative
  +mobile()
    flex-direction: column-reverse

.main
  flex: 44
  display: flex
  flex-direction: column
  padding-bottom: pxToRem(50)
  padding-right: pxToRem(100)
  a
    text-decoration: underline
  +mobile()
    padding-right: 0

.roll
  flex: 55
  position: relative
  display: flex
  align-items: flex-end
  +mobile()
    min-height: 110vw
    margin-bottom: pxToRem(26)
  &Image
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    width: 100%
  &Text
    min-height: pxToRem(43)
    position: relative
    z-index: 100
    +mobile()
      padding: 0 0 pxToRem(26) 0
      font-size: pxToRem(14)
      line-height: (16 / 14)
  &Number
    position: absolute
    right: 100%
    top: 0
    transform: translateX(pxToRem(-30))

.descriptionBox
  position: relative
  flex: 1
  display: flex
  flex-direction: column
  justify-content: center

.description
  line-height: (23 /20)
  del
    text-decoration: underline

.collaborations
  display: flex
  > * + *
    margin-left: pxToRem(56)
  ul
    display: block
    list-style: none
  ul > li
    cursor: pointer
  ul > li:hover
    text-decoration: underline

.projectPreviewImageBox
  pointer-events: none
  position: absolute
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
  width: 90%

.contacts
  position: absolute
  left: pxToRem(260)
  bottom: 0
